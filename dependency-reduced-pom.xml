<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>person.mochi</groupId>
  <artifactId>goblin</artifactId>
  <name>Goblin</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>a small ugly creature in childrenâ€™s stories that likes to trick people.</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>person.mochi.goblin.ArticleClassification</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <deeplearning4j.version>1.0.0-alpha</deeplearning4j.version>
    <maven.compiler.compilerVersion>1.8</maven.compiler.compilerVersion>
    <nd4j.version>1.0.0-alpha</nd4j.version>
    <nd4j.backend>nd4j-cuda-9.1-platform</nd4j.backend>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <datavec.version>1.0.0-alpha</datavec.version>
  </properties>
</project>
